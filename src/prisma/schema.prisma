generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  name      String?
  bio       String?
  password  String
  role      String @default("student")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}